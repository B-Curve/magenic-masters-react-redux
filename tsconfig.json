{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2016",
			"dom"
		],
		"jsx": "react",
		"module": "commonjs",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"types": ["react", "jest", "node"]
	},
	"exclude": [
		"node_modules"
	]
}